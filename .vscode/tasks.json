{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "clang++",
            "args": [
                "-g",
                "-O3",
                "-static",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            
        }
    ],
    "version": "2.0.0"
}